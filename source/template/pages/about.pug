								span.contact__link-name Skype
						li.contact__item
							a.contact__link(href="#")
								+icon('envelope	','green__mod')
								span.contact__link-name iasoloviev61@gmail.com
						li.contact__item
							a.contact__link(href="#")
								+icon('phone','green__mod')
								span.contact__link-name +79191049057
						li.contact__item
							a.contact__link(href="#")
								+icon('map_marker','green__mod')
								div.contact__link-name map
			include ../common/footer